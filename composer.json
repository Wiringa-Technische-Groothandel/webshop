{
    "name": "wtg/webshop",
    "description": "Webshop for Wiringa Technische Groothandel.",
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "path",
            "url": "./packages/wtg/checkout"
        },
        {
            "type": "path",
            "url": "./packages/wtg/customer"
        },
        {
            "type": "path",
            "url": "./packages/wtg/catalog"
        },
        {
            "type": "path",
            "url": "./packages/wtg/search"
        },
        {
            "type": "path",
            "url": "./packages/wtg/block"
        },
        {
            "type": "path",
            "url": "./packages/wtg/address"
        },
        {
            "type": "path",
            "url": "./packages/wtg/favorites"
        }
    ],
    "require": {
        "php": ">=7.0",
        "barryvdh/laravel-debugbar": "^2.3",
        "barryvdh/laravel-ide-helper": "^2.2",
        "chumper/zipper": "^1.0",
        "doctrine/dbal": "^2.5",
        "filp/whoops": "^2.1",
        "gloudemans/shoppingcart": "^2.3",
        "graham-campbell/exceptions": "^9.3",
        "guzzlehttp/guzzle": "^6.2",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "luna/laravel-importer": "~1.0",
        "sentry/sentry-laravel": "^0.6",
        "snowfire/beautymail": "dev-master",
        "wtg/address": "dev-master",
        "wtg/block": "dev-master",
        "wtg/catalog": "dev-master",
        "wtg/checkout": "dev-master",
        "wtg/customer": "dev-master",
        "wtg/favorites": "dev-master",
        "wtg/search": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/var-dumper": "~3.2"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
